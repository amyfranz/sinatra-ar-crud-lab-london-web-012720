<h1> <%= @article.title%></h1>
<p> <%=@article.content%> </p>

<form action="/articles/<%=@article.id%>" method="POST">
  
  <input id="hidden" type="hidden" name="_method" value="PATCH">
 
  <label>Title</label>
  <input type="text" name="title" value = "<%= @article.title%>">
 
  <label>Content</label>
  <input type="text" name="content" value = "<%=@article.content%>">
 
  <input type="submit"> 
</form>